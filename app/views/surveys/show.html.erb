<% title "Encuesta" %>

<p>
  <strong>Name:</strong>
  <%=h @survey.name %>
</p>

<ol>
  <% for question in @survey.questions %>
  <li><%= h question.content %></li>
  <ul>
    <% for answer in question.answers %>
      <li><%= h answer.content %></li>
    <% end %>
  </ul>
  <% end %>
</ol>

<p>
  <%= link_to "Editar", edit_survey_path(@survey) %> |
  <%= link_to "Eliminar", @survey, :confirm => '¿Está seguro que desea eliminar el registro?', :method => :delete %> |
  <%= link_to "Ver todo", surveys_path %>
</p>